<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="110dp"
    android:layout_gravity="center"
    android:id="@+id/ll_buy_ticket"
    android:background="@mipmap/bg_myticket"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_titile_but_ticket_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="五大道博物馆门票"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dicountprice_buy_ticket_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="bottom"
                android:text="¥25"
                android:textColor="@color/text_color"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/tv_origin_price_buy_ticket_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:gravity="bottom"
                android:text="¥30"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_toBuy_buy_ticket_item"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="立即\n购买"
        android:textColor="@color/white"
        android:textSize="25sp" />
</LinearLayout>