<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_public"
    android:orientation="vertical"
    tools:context="com.hengda.smart.wuda.m.ui.ac.RegisterActivity">

    <include layout="@layout/public_top"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_useCount_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="已有1200人使用五大道游客服务中心APP"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_phone_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:hint="输入手机号"
            android:drawablePadding="10dp"
            android:textColor="@color/seekbar_color"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/seekbar_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="输入验证码"
                style="@style/MyEditText"

                android:drawablePadding="10dp"
                android:textColor="@color/seekbar_color"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_text_register"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/selector_code"
                android:padding="5dp"
                android:text="获取验证码"
                android:textColor="@color/seekbar_color"
                android:textSize="14sp" />
        </LinearLayout>
        <EditText
            android:id="@+id/et_pwd_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入密码"
            style="@style/MyEditText"
            android:textColor="@color/seekbar_color"
            android:textSize="16sp"
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/tv_already_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:drawableRight="@drawable/selector_enter"
            android:drawablePadding="5dp"
            android:text="已有账户，直接登录" />

        <Button
            android:id="@+id/btn_register_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/edit_phone_find"
            android:background="@drawable/btn_login"/>
    </LinearLayout>
</LinearLayout>
